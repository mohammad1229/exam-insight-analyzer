{
  "appId": "com.schoolexams.app",
  "productName": "نظام تحليل نتائج الاختبارات المدرسية",
  "files": ["dist/**/*", "src/electronMain.js", "src/preload.js"],
  "directories": {
    "buildResources": "resources",
    "output": "release"
  },
  "asar": true,
  "win": {
    "target": ["nsis", "portable"],
    "icon": "resources/icon.ico",
    "requestedExecutionLevel": "asInvoker"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "نظام تحليل نتائج الاختبارات المدرسية",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "runAfterFinish": true
  },
  "portable": {
    "artifactName": "${productName}-Portable-${version}.${ext}"
  },
  "mac": {
    "target": ["dmg", "zip"],
    "icon": "resources/icon.icns",
    "category": "public.app-category.education"
  },
  "linux": {
    "target": ["AppImage", "deb", "rpm"],
    "icon": "resources/icons",
    "category": "Education",
    "maintainer": "School Exams System"
  },
  "publish": null,
  "extraResources": [
    {
      "from": "resources",
      "to": "resources"
    }
  ],
  "electronVersion": "36.2.0"
}
